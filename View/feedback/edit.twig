{% extends 'base.twig' %}

{% block content %}
    <div class = "row">
        {{ show_massage() }}
        <form id="form" action="/feedback/save_after_edit" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Email" value="{{ feedback.email }}">
            </div>
            <div class="form-group">
                <input type="text" name="name" class="form-control" id="name" placeholder="Имя" value="{{ feedback.name }}">
                <small id="emailHelp" class="form-text text-muted">На фронтэнде валидация: ^[a-zA-Z0-9]+$ на бекенде ^[a-zA-Z]+$ - для демонстрации двойной валидации</small>
            </div>
            <div class="form-group">
                <textarea name="comment" class="form-control" id="comment" rows="3" placeholder="Коментарии">{{ feedback.comments }}</textarea>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="checkbox" class="form-check-input" name="accept" {% if feedback.accept %} checked {% endif %}">
                    Разрешить публикацию
                </label>
            </div>
            <div class="form-group">
                <input type="file" name="fileToUpload" id="fileToUpload" accept="image/*,image/jpeg,image/png">
            </div>
            <input type="hidden" name="id" value="{{ feedback.id }}">
            <button type="submit" name="submit" id="send-submit" class="btn btn-primary">Изменить</button>
        </form>
    </div>
{% endblock %}

{% block js %}
    <script>
        // just for the demos, avoids form submit
        jQuery.validator.addMethod(
                "regex",
                function(value, element, regexp) {
                    var re = new RegExp(regexp);
                    return this.optional(element) || re.test(value);
                },
                "Введены неразрешонные символы."
        );

        function validate_form() {
            return $( "#form" ).validate({
                rules: {
                    email: {
                        required: true,
                        email: true
                    },
                    name: {
                        required: true,
                        regex: '^[а-яА-Яa-zA-Z0-9 ]+$'
                    },
                    comment: {
                        required: true
                    },
                    fileToUpload: {
                        accept: "image/*",
                        filesize: 1048576
                    }
                },
                messages: {
                    fileToUpload: "Файл должен иметь формат JPG, GIF или PNG, размер должен быть меньше 1MB"
                }
            });
        }
        validate_form();
    </script>
{% endblock %}
