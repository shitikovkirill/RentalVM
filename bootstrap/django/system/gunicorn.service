[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=vagrant
Group=vagrant
Environment=DATABASE_URL=sqlite:////vagrant/RentalDjango/db.sqlite
Restart=always
WorkingDirectory=/vagrant/RentalDjango
ReadWriteDirectories=/vagrant/RentalDjango
ExecStart=/home/vagrant/.virtualenvs/RentalDjango/bin/gunicorn --bind 0.0.0.0:8000 rental_project.wsgi:application

[Install]
WantedBy=multi-user.target